-- =============================================
-- üéÆ MINI WORLD GIVE ITEM SYSTEM (WITH PERMISSION)
-- =============================================

-- Maksimal jumlah item per pemberian
local MAX_GIVE = 99

-- Prefix command
local commandPrefix = "/"
local commandList = {}

-- üîç Ambil UID dari nama pemain atau angka langsung
local function nametouid(name)
    local _, _, list = World:getAllPlayers(-1)
    for _, pid in ipairs(list) do
        local _, nick = Player:getNickname(pid)
        if nick == name or tostring(pid) == name then
            return pid
        end
    end
    return nil
end

-- ‚úÖ Fungsi cek izin pemain, baca dari admin_permission.lua
local function hasGivePermission(pid)
    if isPermitted then
        return isPermitted(pid)
    else
        local _, name = Player:getNickname(pid)
        return PERMISSION_WHITELIST and PERMISSION_WHITELIST[name] == true
    end
end

-- üîß Daftarkan command
local function registerCommand(name, func)
    commandList[name] = func
end

-- =============================================
-- üì¶ GIVE ITEM TO PLAYER
-- =============================================

registerCommand("give", function(pid, itemid, qty, target)
    if not hasGivePermission(pid) then
        Chat:sendSystemMsg("üö´ Kamu tidak punya izin menggunakan /give.", pid)
        return
    end

    itemid = tonumber(itemid)
    qty = math.min(tonumber(qty) or 1, MAX_GIVE)
    if not itemid or qty < 1 then
        Chat:sendSystemMsg("‚ö† Format: /give [itemID] [jumlah] ([target])", pid)
        return
    end

    local name = Item:getItemName(itemid)
    if not name then
        Chat:sendSystemMsg("‚ùå ID item tidak valid!", pid)
        return
    end

    local tp = target and (tonumber(target) or nametouid(target)) or pid
    if not tp then
        Chat:sendSystemMsg("‚ùå Target tidak ditemukan!", pid)
        return
    end

    local ok = Backpack:addItem(tp, itemid, qty)
    if ok then
        Chat:sendSystemMsg("üéÅ Diberikan *" .. name .. "* x" .. qty, tp)
        if tp ~= pid then
            Chat:sendSystemMsg("üì¶ Kamu memberi *" .. name .. "* x" .. qty .. " ke pemain lain.", pid)
        end
    else
        Chat:sendSystemMsg("‚úñ Gagal memberi item.", pid)
    end
end)

-- =============================================
-- üì¶ GIVE ITEM TO ALL PLAYERS
-- =============================================

registerCommand("giveall", function(pid, itemid, qty)
    if not hasGivePermission(pid) then
        Chat:sendSystemMsg("üö´ Kamu tidak punya izin menggunakan /giveall.", pid)
        return
    end

    itemid = tonumber(itemid)
    qty = math.min(tonumber(qty) or 1, MAX_GIVE)
    if not itemid or qty < 1 then
        Chat:sendSystemMsg("‚ö† Format: /giveall [itemID] [jumlah]", pid)
        return
    end

    local name = Item:getItemName(itemid)
    if not name then
        Chat:sendSystemMsg("‚ùå ID item tidak valid!", pid)
        return
    end

    local _, _, list = World:getAllPlayers(-1)
    for _, tpid in ipairs(list) do
        Backpack:addItem(tpid, itemid, qty)
        Chat:sendSystemMsg("üéÅ Kamu menerima *" .. name .. "* x" .. qty, tpid)
    end
    Chat:sendSystemMsg("üì¢ *" .. name .. "* x" .. qty .. " diberikan ke semua pemain!", pid)
end)

-- =============================================
-- üßπ CLEAR PLAYER INVENTORY
-- =============================================

registerCommand("clearinv", function(pid, barType)
    if not hasGivePermission(pid) then
        Chat:sendSystemMsg("üö´ Kamu tidak punya izin menggunakan /clearinv.", pid)
        return
    end

    local bt = tonumber(barType)
    if not bt or bt < 1 or bt > 3 then
        Chat:sendSystemMsg("‚ö† Format: /clearinv [barType 1‚Äì3]\n1=Shortcut, 2=Storage, 3=Armor", pid)
        return
    end

    local err = Backpack:clearPack(pid, bt)
    if err == ErrorCode.OK or err == 0 then
        local nameBar = ({ "Shortcut", "Storage", "Armor" })[bt]
        Chat:sendSystemMsg("üßπ " .. nameBar .. " bar kamu berhasil dikosongkan.", pid)
    else
        Chat:sendSystemMsg("‚ö† Gagal mengosongkan bar! Kode error: " .. tostring(err), pid)
    end
end)

-- =============================================
-- üìò HELP COMMAND
-- =============================================

registerCommand("givehelp", function(pid)
    Chat:sendSystemMsg("üìò Daftar Perintah Give System:", pid)
    Chat:sendSystemMsg("/give [itemID] [qty] ([target]) ‚Üí Beri item", pid)
    Chat:sendSystemMsg("/giveall [itemID] [qty]        ‚Üí Beri ke semua pemain", pid)
    Chat:sendSystemMsg("/clearinv [1-3]                ‚Üí Kosongkan bar", pid)
    Chat:sendSystemMsg("/givehelp                      ‚Üí Bantuan", pid)
end)

-- =============================================
-- üí¨ CHAT EVENT HANDLER
-- =============================================

local function onPlayerMessage(event)
    local pid = event.eventobjid
    local msg = event.content

    if not msg:find("^" .. commandPrefix) then return end

    local _, parts = Game:splitStr(msg:sub(2), " ")
    local cmd = parts[1]:lower()
    local args = {}
    for i = 2, #parts do
        args[#args + 1] = parts[i]
    end

    local fn = commandList[cmd]
    if fn then fn(pid, unpack(args)) end
end

ScriptSupportEvent:registerEvent("Player.NewInputContent", onPlayerMessage)
