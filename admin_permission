-- =============================================
-- ğŸ” ADMIN + PERMISSION SYSTEM (FINAL VERSION)
-- =============================================

-- âœ… Daftar pemain dengan izin tetap (whitelist)
PERMISSION_WHITELIST = {
    ["DINA"] = true,
    ["Owner123"] = true
}

-- ğŸ“Œ Batas maksimal pemberian item
MAX_GIVE = 99

-- ğŸ”§ Variabel command & izin dinamis
commandPrefix = "/"
commandList = {}
givePermission = {}            -- UID yang diberi izin sementara
playerListIndexed = {}         -- Nomor ke UID, diisi oleh /listplayer

-- ğŸ” Fungsi: nama â†’ UID
function nametouid(name)
    local _, _, list = World:getAllPlayers(-1)
    for _, pid in ipairs(list) do
        local _, nick = Player:getNickname(pid)
        if nick == name or tostring(pid) == name then
            return pid
        end
    end
    return nil
end

-- ğŸ† Cek apakah host (fallback jika Player:isHost tidak tersedia)
function isHost(pid)
    if Player.isHost then
        return Player:isHost(pid) == true
    end
    local _, _, list = World:getAllPlayers(-1)
    local minPid = nil
    for _, p in ipairs(list) do
        if not minPid or p < minPid then minPid = p end
    end
    return pid == minPid
end

-- ğŸ” Cek apakah memiliki izin penuh
function hasGivePermission(pid)
    local _, name = Player:getNickname(pid)
    return isHost(pid) or givePermission[pid] or PERMISSION_WHITELIST[name] == true
end

-- âœ… Fungsi global (akses dari luar)
function isPermitted(pid)
    local _, name = Player:getNickname(pid)
    return isHost(pid) or givePermission[pid] or PERMISSION_WHITELIST[name] == true
end

function isPermittedByName(name)
    return PERMISSION_WHITELIST[name] == true
end

function getAllPermittedNames()
    local permittedNames = {}
    for name, _ in pairs(PERMISSION_WHITELIST) do
        table.insert(permittedNames, name)
    end
    for uid, _ in pairs(givePermission) do
        local _, name = Player:getNickname(uid)
        if name then
            table.insert(permittedNames, name)
        end
    end
    return permittedNames
end

-- ğŸ”§ Pendaftaran command
function registerCommand(name, func)
    commandList[name] = func
end

-- =============================================
-- ğŸ“œ COMMANDS: GRANT / REVOKE / LIST / HOST
-- =============================================

-- ğŸ§¾ Tampilkan daftar pemain sebagai nomor
registerCommand("listplayer", function(pid)
    local _, _, list = World:getAllPlayers(-1)
    playerListIndexed = {}
    Chat:sendSystemMsg("ğŸ“‹ Daftar Pemain:", pid)
    for i, p in ipairs(list) do
        local _, name = Player:getNickname(p)
        playerListIndexed[i] = p
        Chat:sendSystemMsg("[" .. i .. "] " .. name .. " (" .. p .. ")", pid)
    end
    Chat:sendSystemMsg("â„¹ Gunakan: /grantgive P[1] untuk beri izin ke pemain no 1", pid)
end)

-- ğŸ¯ Ambil pid dari "P[1]" atau nama
function getPidFromPX(str)
    local num = str:match("^P%[(%d+)%]$")
    if num then
        local index = tonumber(num)
        return playerListIndexed[index]
    end
    return tonumber(str) or nametouid(str)
end

-- âœ… Grant izin /give
registerCommand("grantgive", function(pid, target)
    if not hasGivePermission(pid) then
        Chat:sendSystemMsg("â›” Kamu tidak bisa memberi izin.", pid)
        return
    end
    local tp = getPidFromPX(target)
    if not tp then
        Chat:sendSystemMsg("âŒ Target tidak ditemukan!", pid)
        return
    end
    givePermission[tp] = true
    Chat:sendSystemMsg("âœ… Izin /give diberikan ke pemain.", pid)
    Chat:sendSystemMsg("ğŸ“œ Kamu sekarang memiliki izin /give.", tp)
end)

-- âŒ Cabut izin /give
registerCommand("revokeperm", function(pid, target)
    if not hasGivePermission(pid) then
        Chat:sendSystemMsg("â›” Kamu tidak bisa mencabut izin.", pid)
        return
    end
    local tp = getPidFromPX(target)
    if not tp then
        Chat:sendSystemMsg("âŒ Target tidak ditemukan!", pid)
        return
    end
    givePermission[tp] = nil
    Chat:sendSystemMsg("ğŸš« Izin dicabut dari pemain.", pid)
    Chat:sendSystemMsg("â›” Kamu tidak lagi memiliki izin /give.", tp)
end)

-- ğŸ“ Lihat daftar semua pemain yang punya izin
registerCommand("listperm", function(pid)
    Chat:sendSystemMsg("ğŸ§¾ Pemain dengan izin /give:", pid)
    for uid, _ in pairs(givePermission) do
        local _, name = Player:getNickname(uid)
        if name then
            Chat:sendSystemMsg("âœ… " .. name .. " (" .. uid .. ")", pid)
        end
    end
    for name, _ in pairs(PERMISSION_WHITELIST) do
        Chat:sendSystemMsg("ğŸ”’ Whitelist: " .. name, pid)
    end
end)

-- âœ… Cek apakah host
registerCommand("amihost", function(pid)
    if isHost(pid) then
        Chat:sendSystemMsg("âœ… Kamu adalah host!", pid)
    else
        Chat:sendSystemMsg("âŒ Kamu BUKAN host.", pid)
    end
end)

-- =============================================
-- ğŸ’¬ CHAT PARSER UNTUK COMMAND (EVENT)
-- =============================================

if not unpack and table.unpack then
    unpack = table.unpack
end

ScriptSupportEvent:registerEvent("Player.NewInputContent", function(event)
    local pid = event.eventobjid
    local msg = event.content
    if msg:sub(1, 1) ~= "/" then return end

    local args = {}
    for word in msg:gmatch("%S+") do
        table.insert(args, word)
    end

    local cmd = args[1]:sub(2):lower()
    local func = commandList[cmd]
    if func then
        table.remove(args, 1)
        func(pid, unpack(args))
    end
end)
